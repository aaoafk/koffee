<h1 class="text-2xl font-bold mb-4">Koffee Reservation</h1>

<p><strong>Name:</strong> <%= @reservation.name %></p>
<p><strong>Day:</strong> <%= @reservation.day %></p>

<div class="mt-4">
		<%= link_to "Edit", edit_reservation_path(@reservation), data: { turbo: false }, class: "bg-yellow-500 text-white px-4 py-2 rounded" %>
		<%= link_to "Back", reservations_path, class: "bg-gray-500 text-white px-4 py-2 rounded ml-2" %>
		<%= link_to "Delete", reservation_path(@reservation), data: { turbo: false }, class: "bg-gray-500 text-white px-4 py-2 rounded ml-2" %>
</div>
