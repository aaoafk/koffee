<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="font-virgil text-3xl font-bold text-gray-800 mb-8">koffee reservations</h1>

	<% if Reservation.where(day: Date::DAYNAMES[Time.zone.today.wday]).count <= 5 %>
			<%= link_to "I want koffee!", new_reservation_path, class: "font-nunito bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded shadow-md transition duration-300 ease-in-out mb-8 inline-block" %>
	<% else %>
			<h2 class="text-3xl font-bold text-gray-800 mb-8">Sorry. No more reservations for <%= Date::DAYNAMES[Time.zone.today.wday] %> :(</h1>
	<% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
    <table class="w-full">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Day</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @reservations.each do |reservation| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= reservation.name.value %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= reservation.day %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View", reservation_path(reservation), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <% if reservation.user_id == @user_id %>
                <%= link_to "Edit", edit_reservation_path(reservation), data: { turbo: false }, class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to "Delete", reservation_path(reservation), method: :delete, data: { turbo: false }, class: "text-red-600 hover:text-red-900" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <h2 class="font-virgil text-2xl font-bold text-gray-800 mb-4">the koffee cup leaderboard</h2>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Day</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Cups</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% %w(Monday Tuesday Wednesday Thursday Friday).each do |day| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= day %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= Reservation.where(day: day).count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
