<div class="container max-w-4xl mx-auto px-4 py-8">

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center justify-center">
    <div class="text-center max-w-2xl">
      <h1 class="font-virgil text-3xl font-bold text-gray-800 mb-8">koffee reservations</h1>

      <%= image_tag 'coffee_landing_page.jpg', alt: 'Coffee Landing Page Image', class: 'w-full rounded-lg shadow-md mb-8', style: 'max-width: 600px; width: 100%; height: auto;' %>

      <div class="mb-8">
        <% if Reservation.where(day: Date::DAYNAMES[Time.zone.today.wday]).count <= 5 %>
          <%= link_to "I want koffee!", new_reservation_path, class: "font-nunito bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded shadow-md transition duration-300 ease-in-out inline-block" %>
        <% else %>
          <h2 class="text-3xl font-bold text-gray-800">Sorry. No more reservations for <%= Date::DAYNAMES[Time.zone.today.wday] %> :(</h2>
        <% end %>
      </div>
    </div>
  </div>
  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
    <table class="w-full">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Day</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @reservations.each do |reservation| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= reservation.name.value %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= reservation.day %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View", reservation_path(reservation), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <% if reservation.user_id == Current.user_id %>
                  <%= link_to "Delete", reservation, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition duration-300 ease-in-out" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-12">
    <div class="bg-white shadow-md rounded-lg p-8 max-w-2xl mx-auto">
      <h2 class="font-virgil text-3xl font-bold text-gray-800 mb-6 text-center">koffee monsters</h2>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tr-lg">Total Cups</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @names.each_with_index do |name, index| %>
              <tr class="hover:bg-gray-50 <%= index.even? ? 'bg-white' : 'bg-gray-50' %>">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= name.value %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= Reservation.where(name: name).count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
